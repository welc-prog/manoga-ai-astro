---
import '../styles/main.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { t } from '../i18n/index.ts';
import Analytics from '@vercel/analytics/astro';

interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const { title, description, lang = 'en' } = Astro.props;
const desc = description || t('meta.description', lang);
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={desc} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={desc} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://www.manoga.digital${Astro.url.pathname}`} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={desc} />
    <link rel="canonical" href={`https://www.manoga.digital${Astro.url.pathname}`} />
    {!Astro.url.pathname.startsWith('/da/') && (
      <>
        <link rel="alternate" hreflang="en" href={`https://www.manoga.digital${Astro.url.pathname}`} />
        <link rel="alternate" hreflang="da" href={`https://www.manoga.digital/da${Astro.url.pathname}`} />
        <link rel="alternate" hreflang="x-default" href={`https://www.manoga.digital${Astro.url.pathname}`} />
      </>
    )}
    {Astro.url.pathname.startsWith('/da/') && (
      <>
        <link rel="alternate" hreflang="en" href={`https://www.manoga.digital${Astro.url.pathname.replace(/^\/da/, '')}`} />
        <link rel="alternate" hreflang="da" href={`https://www.manoga.digital${Astro.url.pathname}`} />
        <link rel="alternate" hreflang="x-default" href={`https://www.manoga.digital${Astro.url.pathname.replace(/^\/da/, '')}`} />
      </>
    )}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | Manoga AI</title>
    <Analytics />
  </head>
  <body>
    <Header lang={lang} />
    <main>
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
