---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n/index.ts';
import IconWorkshop from '../../components/icons/IconWorkshop.astro';
import IconCode from '../../components/icons/IconCode.astro';
import IconBrain from '../../components/icons/IconBrain.astro';
import IconBarChart from '../../components/icons/IconBarChart.astro';
import IconShield from '../../components/icons/IconShield.astro';
import IconTarget from '../../components/icons/IconTarget.astro';
import IconArrowRight from '../../components/icons/IconArrowRight.astro';

const lang = 'da';  // Hardcode for Danish pages
const prefix = '/da';  // Hardcode for Danish pages
---

<Layout title={t('services.workshops', lang)} description={t('services.workshopsDesc', lang)} lang={lang}>
  <section class="page-header">
    <div class="container">
      <div class="page-header-with-image">
        <div class="page-header-content">
          <span class="page-subtitle">{t('services.whatWeDo', lang)}</span>
          <h1>{t('services.workshops', lang)}</h1>
          <p class="page-header-description">{t('services.workshopsDesc', lang)}</p>
        </div>
        <div class="page-header-image">
          <img src="/images/workshops.webp" alt={t('services.workshops', lang)} />
        </div>
      </div>
    </div>
  </section>

  <!-- Core Services -->
  <section class="section section-mesh">
    <div class="container">
      <div class="services-grid reveal">
        <div class="card">
          <div class="card-icon">
            <IconWorkshop />
          </div>
          <h3 class="card-title">{t('pages.workshops.promptEngineering', lang)}</h3>
          <p class="card-text">{t('pages.workshops.promptEngineeringDesc', lang)}</p>
        </div>

        <div class="card">
          <div class="card-icon">
            <IconCode />
          </div>
          <h3 class="card-title">{t('pages.workshops.vibecodingBootcamp', lang)}</h3>
          <p class="card-text">{t('pages.workshops.vibecodingBootcampDesc', lang)}</p>
        </div>

        <div class="card">
          <div class="card-icon">
            <IconBrain />
          </div>
          <h3 class="card-title">{t('pages.workshops.aiForBusiness', lang)}</h3>
          <p class="card-text">{t('pages.workshops.aiForBusinessDesc', lang)}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section section-gradient section-grid">
    <div class="container">
      <div class="content-section reveal">
        <h2 class="section-title">{t('pages.workshops.aboutTitle', lang)}</h2>
        <p class="section-text">{t('pages.workshops.aboutDesc', lang)}</p>
        <p class="section-text">{t('pages.workshops.aboutDesc2', lang)}</p>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="section section-mesh">
    <div class="container">
      <div class="text-center mb-3">
        <span class="hero-tagline">{t('common.benefits', lang)}</span>
        <h2>{t('pages.workshops.whyTitle', lang)}</h2>
        <p style="max-width: 700px; margin: 0 auto;">{t('pages.workshops.whyDesc', lang)}</p>
      </div>

      <div class="benefits-grid reveal">
        <div class="benefit-item">
          <div class="benefit-icon">
            <IconBarChart />
          </div>
          <h4>{t('pages.workshops.benefit1', lang)}</h4>
          <p>{t('pages.workshops.benefit1Desc', lang)}</p>
        </div>

        <div class="benefit-item">
          <div class="benefit-icon">
            <IconWorkshop />
          </div>
          <h4>{t('pages.workshops.benefit2', lang)}</h4>
          <p>{t('pages.workshops.benefit2Desc', lang)}</p>
        </div>

        <div class="benefit-item">
          <div class="benefit-icon">
            <IconShield />
          </div>
          <h4>{t('pages.workshops.benefit3', lang)}</h4>
          <p>{t('pages.workshops.benefit3Desc', lang)}</p>
        </div>

        <div class="benefit-item">
          <div class="benefit-icon">
            <IconTarget />
          </div>
          <h4>{t('pages.workshops.benefit4', lang)}</h4>
          <p>{t('pages.workshops.benefit4Desc', lang)}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Workshop Formats Section -->
  <section class="section section-gradient section-grid">
    <div class="container">
      <div class="text-center mb-3">
        <span class="hero-tagline">{t('common.howItWorks', lang)}</span>
        <h2>{t('pages.workshops.workshopsTitle', lang)}</h2>
      </div>

      <div class="services-grid reveal">
        <div class="card">
          <h4 class="card-title">{t('pages.workshops.workshop1', lang)}</h4>
          <p class="card-text">{t('pages.workshops.workshop1Desc', lang)}</p>
        </div>
        <div class="card">
          <h4 class="card-title">{t('pages.workshops.workshop2', lang)}</h4>
          <p class="card-text">{t('pages.workshops.workshop2Desc', lang)}</p>
        </div>
        <div class="card">
          <h4 class="card-title">{t('pages.workshops.workshop3', lang)}</h4>
          <p class="card-text">{t('pages.workshops.workshop3Desc', lang)}</p>
        </div>
        <div class="card">
          <h4 class="card-title">{t('pages.workshops.workshop4', lang)}</h4>
          <p class="card-text">{t('pages.workshops.workshop4Desc', lang)}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section section-mesh">
    <div class="container">
      <div class="text-center mb-3">
        <span class="hero-tagline">{t('common.gotQuestions', lang)}</span>
        <h2>{t('common.faq', lang)}</h2>
      </div>

      <div class="faq-grid reveal">
        <div class="faq-item">
          <h4 class="faq-question">{t('pages.workshops.faq1', lang)}</h4>
          <p class="faq-answer">{t('pages.workshops.faq1Answer', lang)}</p>
        </div>

        <div class="faq-item">
          <h4 class="faq-question">{t('pages.workshops.faq2', lang)}</h4>
          <p class="faq-answer">{t('pages.workshops.faq2Answer', lang)}</p>
        </div>

        <div class="faq-item">
          <h4 class="faq-question">{t('pages.workshops.faq3', lang)}</h4>
          <p class="faq-answer">{t('pages.workshops.faq3Answer', lang)}</p>
        </div>

        <div class="faq-item">
          <h4 class="faq-question">{t('pages.workshops.faq4', lang)}</h4>
          <p class="faq-answer">{t('pages.workshops.faq4Answer', lang)}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section section-gradient section-grid">
    <div class="container">
      <div class="card text-center" style="padding: var(--space-xl); max-width: 800px; margin: 0 auto;">
        <h2 class="mb-1">{t('cta.title', lang)}</h2>
        <p style="font-size: 1.25rem; margin-bottom: var(--space-md);">{t('cta.subtitle', lang)}</p>
        <a href={`${prefix}/contact`} class="btn btn-primary btn-glow">
          {t('cta.button', lang)}
          <IconArrowRight />
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
.content-section {
  max-width: 800px;
  margin: 0 auto;
}

.section-title {
  margin-bottom: var(--space-md);
}

.section-text {
  font-size: 1.1rem;
  line-height: 1.8;
  margin-bottom: var(--space-md);
  color: var(--text-secondary);
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--space-lg);
}

.benefit-item {
  text-align: center;
  padding: var(--space-lg);
}

.benefit-icon {
  width: 60px;
  height: 60px;
  margin: 0 auto var(--space-md);
  background: var(--gradient-primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.benefit-icon :global(svg) {
  width: 28px;
  height: 28px;
  color: white;
}

.benefit-item h4 {
  margin-bottom: var(--space-sm);
  color: var(--text-primary);
}

.benefit-item p {
  color: var(--text-secondary);
  line-height: 1.6;
}

.faq-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--space-lg);
  max-width: 1000px;
  margin: 0 auto;
}

.faq-item {
  background: var(--bg-surface);
  padding: var(--space-lg);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-subtle);
}

.faq-question {
  color: var(--text-primary);
  margin-bottom: var(--space-sm);
  font-size: 1.1rem;
}

.faq-answer {
  color: var(--text-secondary);
  line-height: 1.6;
}

@media (max-width: 768px) {
  .faq-grid {
    grid-template-columns: 1fr;
  }
}
</style>
