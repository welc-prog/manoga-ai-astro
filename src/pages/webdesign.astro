---
import Layout from '../layouts/Layout.astro';
import { t } from '../i18n/index.ts';
import IconLayout from '../components/icons/IconLayout.astro';
import IconCode from '../components/icons/IconCode.astro';
import IconBarChart from '../components/icons/IconBarChart.astro';
import IconTarget from '../components/icons/IconTarget.astro';
import IconArrowRight from '../components/icons/IconArrowRight.astro';

const lang = 'en';
const prefix = lang === 'en' ? '' : `/${lang}`;
---

<Layout title={t('nav.webdesign', lang)} description={t('marketing.webDesign', lang)} lang={lang}>
  <section class="page-header">
    <div class="container">
      <div class="page-header-with-image">
        <div class="page-header-content">
          <span class="page-subtitle">{t('marketing.tagline', lang)}</span>
          <h1>{t('nav.webdesign', lang)}</h1>
          <p class="page-header-description">{t('marketing.webDesign', lang)}</p>
        </div>
        <div class="page-header-image">
          <img src="/images/webdesign.webp" alt="Web Design" />
        </div>
      </div>
    </div>
  </section>

  <!-- Core Services -->
  <section class="section section-mesh">
    <div class="container">
      <div class="services-grid reveal">
        <div class="card">
          <div class="card-icon">
            <IconLayout />
          </div>
          <h3 class="card-title">{t('pages.webdesign.modernDesign', lang)}</h3>
          <p class="card-text">{t('pages.webdesign.modernDesignDesc', lang)}</p>
        </div>

        <div class="card">
          <div class="card-icon">
            <IconCode />
          </div>
          <h3 class="card-title">{t('pages.webdesign.aiDevelopment', lang)}</h3>
          <p class="card-text">{t('pages.webdesign.aiDevelopmentDesc', lang)}</p>
        </div>

        <div class="card">
          <div class="card-icon">
            <IconBarChart />
          </div>
          <h3 class="card-title">{t('pages.webdesign.conversionOptimization', lang)}</h3>
          <p class="card-text">{t('pages.webdesign.conversionOptimizationDesc', lang)}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section section-gradient section-grid">
    <div class="container">
      <div class="content-section reveal">
        <h2 class="section-title">{t('pages.webdesign.aboutTitle', lang)}</h2>
        <p class="section-text">{t('pages.webdesign.aboutDesc', lang)}</p>
        <p class="section-text">{t('pages.webdesign.aboutDesc2', lang)}</p>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="section section-mesh">
    <div class="container">
      <div class="text-center mb-3">
        <span class="hero-tagline">{t('common.benefits', lang)}</span>
        <h2>{t('pages.webdesign.whyTitle', lang)}</h2>
        <p style="max-width: 700px; margin: 0 auto;">{t('pages.webdesign.whyDesc', lang)}</p>
      </div>

      <div class="benefits-grid reveal">
        <div class="benefit-item">
          <div class="benefit-icon">
            <IconTarget />
          </div>
          <h4>{t('pages.webdesign.benefit1', lang)}</h4>
          <p>{t('pages.webdesign.benefit1Desc', lang)}</p>
        </div>

        <div class="benefit-item">
          <div class="benefit-icon">
            <IconBarChart />
          </div>
          <h4>{t('pages.webdesign.benefit2', lang)}</h4>
          <p>{t('pages.webdesign.benefit2Desc', lang)}</p>
        </div>

        <div class="benefit-item">
          <div class="benefit-icon">
            <IconLayout />
          </div>
          <h4>{t('pages.webdesign.benefit3', lang)}</h4>
          <p>{t('pages.webdesign.benefit3Desc', lang)}</p>
        </div>

        <div class="benefit-item">
          <div class="benefit-icon">
            <IconCode />
          </div>
          <h4>{t('pages.webdesign.benefit4', lang)}</h4>
          <p>{t('pages.webdesign.benefit4Desc', lang)}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="section section-gradient section-grid">
    <div class="container">
      <div class="text-center mb-3">
        <span class="hero-tagline">{t('services.whatWeDo', lang)}</span>
        <h2>{t('pages.webdesign.servicesTitle', lang)}</h2>
      </div>

      <div class="services-grid reveal">
        <div class="card">
          <h4 class="card-title">{t('pages.webdesign.service1', lang)}</h4>
          <p class="card-text">{t('pages.webdesign.service1Desc', lang)}</p>
        </div>
        <div class="card">
          <h4 class="card-title">{t('pages.webdesign.service2', lang)}</h4>
          <p class="card-text">{t('pages.webdesign.service2Desc', lang)}</p>
        </div>
        <div class="card">
          <h4 class="card-title">{t('pages.webdesign.service3', lang)}</h4>
          <p class="card-text">{t('pages.webdesign.service3Desc', lang)}</p>
        </div>
        <div class="card">
          <h4 class="card-title">{t('pages.webdesign.service4', lang)}</h4>
          <p class="card-text">{t('pages.webdesign.service4Desc', lang)}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section section-mesh">
    <div class="container">
      <div class="text-center mb-3">
        <span class="hero-tagline">{t('common.gotQuestions', lang)}</span>
        <h2>{t('common.faq', lang)}</h2>
      </div>

      <div class="faq-grid reveal">
        <div class="faq-item">
          <h4 class="faq-question">{t('pages.webdesign.faq1', lang)}</h4>
          <p class="faq-answer">{t('pages.webdesign.faq1Answer', lang)}</p>
        </div>

        <div class="faq-item">
          <h4 class="faq-question">{t('pages.webdesign.faq2', lang)}</h4>
          <p class="faq-answer">{t('pages.webdesign.faq2Answer', lang)}</p>
        </div>

        <div class="faq-item">
          <h4 class="faq-question">{t('pages.webdesign.faq3', lang)}</h4>
          <p class="faq-answer">{t('pages.webdesign.faq3Answer', lang)}</p>
        </div>

        <div class="faq-item">
          <h4 class="faq-question">{t('pages.webdesign.faq4', lang)}</h4>
          <p class="faq-answer">{t('pages.webdesign.faq4Answer', lang)}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section section-gradient section-grid">
    <div class="container">
      <div class="card text-center" style="padding: var(--space-xl); max-width: 800px; margin: 0 auto;">
        <h2 class="mb-1">{t('cta.title', lang)}</h2>
        <p style="font-size: 1.25rem; margin-bottom: var(--space-md);">{t('cta.subtitle', lang)}</p>
        <a href={`${prefix}/contact`} class="btn btn-primary btn-glow">
          {t('cta.button', lang)}
          <IconArrowRight />
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
.content-section {
  max-width: 800px;
  margin: 0 auto;
}

.section-title {
  margin-bottom: var(--space-md);
}

.section-text {
  font-size: 1.1rem;
  line-height: 1.8;
  margin-bottom: var(--space-md);
  color: var(--text-secondary);
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--space-lg);
}

.benefit-item {
  text-align: center;
  padding: var(--space-lg);
}

.benefit-icon {
  width: 60px;
  height: 60px;
  margin: 0 auto var(--space-md);
  background: var(--gradient-primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.benefit-icon :global(svg) {
  width: 28px;
  height: 28px;
  color: white;
}

.benefit-item h4 {
  margin-bottom: var(--space-sm);
  color: var(--text-primary);
}

.benefit-item p {
  color: var(--text-secondary);
  line-height: 1.6;
}

.faq-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--space-lg);
  max-width: 1000px;
  margin: 0 auto;
}

.faq-item {
  background: var(--bg-surface);
  padding: var(--space-lg);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-subtle);
}

.faq-question {
  color: var(--text-primary);
  margin-bottom: var(--space-sm);
  font-size: 1.1rem;
}

.faq-answer {
  color: var(--text-secondary);
  line-height: 1.6;
}

@media (max-width: 768px) {
  .faq-grid {
    grid-template-columns: 1fr;
  }
}
</style>
