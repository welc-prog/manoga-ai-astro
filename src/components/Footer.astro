---
import { t } from 'i18next';
import IconLinkedIn from './icons/IconLinkedIn.astro';

const lang = Astro.currentLocale || 'en';
const prefix = lang === 'en' ? '' : `/${lang}`;
const currentYear = 2025;
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Brand Column -->
      <div class="footer-brand">
        <a href={`${prefix}/`} class="logo">
          <span class="logo-icon">M</span>
          <span class="logo-text">Manoga<span class="text-gradient">AI</span></span>
        </a>
        <p>{t('footer.description')}</p>
        <div class="social-links">
          <a href="https://www.linkedin.com/in/kennethabueg/" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <IconLinkedIn />
          </a>
        </div>
      </div>

      <!-- Services Column -->
      <div class="footer-column">
        <h4 class="footer-heading">{t('footer.digitalMarketing')}</h4>
        <ul class="footer-links">
          <li><a href={`${prefix}/seo`}>{t('footer.seoServices')}</a></li>
          <li><a href={`${prefix}/google-ads`}>Google Ads</a></li>
          <li><a href={`${prefix}/meta-advertising`}>{t('nav.metaAds')}</a></li>
          <li><a href={`${prefix}/webdesign`}>{t('nav.webdesign')}</a></li>
          <li><a href={`${prefix}/google-tag-manager`}>Google Tag Manager</a></li>
        </ul>
      </div>

      <!-- AI Services Column -->
      <div class="footer-column">
        <h4 class="footer-heading">{t('footer.aiServices')}</h4>
        <ul class="footer-links">
          <li><a href={`${prefix}/ai-consulting`}>{t('nav.aiConsulting')}</a></li>
          <li><a href={`${prefix}/vibecoding`}>Vibecoding</a></li>
          <li><a href={`${prefix}/workshops`}>AI Workshops</a></li>
          <li><a href={`${prefix}/portfolio`}>Portfolio</a></li>
        </ul>
      </div>

      <!-- Contact Column -->
      <div class="footer-column">
        <h4 class="footer-heading">{t('footer.contact')}</h4>
        <ul class="footer-links">
          <li>
            <a href="tel:+4550587900">+45 50 58 79 00</a>
          </li>
          <li>
            <a href="https://www.linkedin.com/in/kennethabueg/" target="_blank" rel="noopener">
              {t('footer.linkedinProfile')}
            </a>
          </li>
          <li>CVR: DK39733730</li>
        </ul>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <p>&copy; {currentYear} Manoga AI. {t('footer.allRights')}</p>
      <p>CVR: DK39733730 | {t('footer.denmark')}</p>
    </div>
  </div>
</footer>
