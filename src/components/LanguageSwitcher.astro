---
interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const currentPath = Astro.url.pathname;

// Calculate the path for the other language
let enPath: string;
let daPath: string;

if (lang === 'en') {
  enPath = currentPath;
  daPath = `/da${currentPath}`;
} else {
  // Remove /da prefix for English
  enPath = currentPath.replace(/^\/da/, '') || '/';
  daPath = currentPath;
}
---

<div class="language-switcher">
  <a
    href={enPath}
    class:list={['lang-btn', { active: lang === 'en' }]}
    aria-label="Switch to English"
  >
    EN
  </a>
  <span class="lang-divider">/</span>
  <a
    href={daPath}
    class:list={['lang-btn', { active: lang === 'da' }]}
    aria-label="Skift til dansk"
  >
    DA
  </a>
</div>

<style>
.language-switcher {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  margin-left: var(--space-md);
}

.lang-btn {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--text-secondary);
  text-decoration: none;
  padding: 0.25rem 0.5rem;
  border-radius: var(--radius-sm);
  transition: all 0.2s ease;
  letter-spacing: 0.025em;
}

.lang-btn:hover {
  color: var(--text-primary);
  background: var(--bg-surface);
}

.lang-btn.active {
  color: var(--accent-primary);
  font-weight: 600;
}

.lang-divider {
  color: var(--text-muted);
  font-size: 0.875rem;
  user-select: none;
}

@media (max-width: 768px) {
  .language-switcher {
    margin-left: 0;
    margin-right: auto;
    order: -1;
  }
}
</style>
